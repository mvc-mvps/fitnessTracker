<h2>Nutrition</h2>

<div class="alert alert-secondary" role="alert">
  A simple secondary alertâ€”check it out!
</div>

  <a href='/addfood'><button class='btn primary-btn' id='add-food'>Add Food</button></a>
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Name</th>
        <th scope='col'>Protein</th>
        <th scope='col'>Calories</th>
        <th scope='col'>Serving</th>
        <th scope='col'>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each nutritionitems as |nutritionitem|}}
        <tr>
          <th
            class='nutritionId'
            value='{{nutritionitem.id}}'
            scope='row'
          >{{nutritionitem.id}}</th>
          <td>{{nutritionitem.name}}</td>
          <td class="proteinData">{{nutritionitem.protein}}</td>
          <td class="calorieData">{{nutritionitem.calories}}</td>
          <td>{{nutritionitem.serving}}</td>
          <td>
            <a href='/updatefood/{{nutritionitem.id}}'><button
                class='btn secondary-btn'
                id='update-food'
              >Update</button></a>
            <button
              class='btn danger-btn delete-food'
              id='delete-food'
              data-id="{{nutritionitem.id}}"
            >Delete</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
