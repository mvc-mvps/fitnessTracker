<h2>Update Food</h2>

<form id="submit-food" action="/add" method="PUT">
    <div class="form-group">
        <label for="food-name">Food Name:</label>
        <input class="form-control" id="food-name" placeholder="Name" name="name">
    </div>
    <div class="form-group">
        <label for="food-protein">Protein (g):</label>
        <input class="form-control" id="food-protein" placeholder="Grams of protein" name="protein">
    </div>
    <div class="form-group">
        <label for="food-calories">Calories:</label>
        <input class="form-control" id="food-calories" placeholder="Number of calories" name="calories">
    </div>
    <div class="form-group">
        <label for="food-servings">Servings:</label>
        <input class="form-control" id="food-servings" placeholder="Number of servings" name="servings">
    </div>
    <div class="form-group">
        <a href="/api/nutrition"><button class="btn primary btn">Update</button></a>
    </div>
</form>

<script src='/js/updatefood.js'></script>