<a href="/api/planner">
    <button class="btn" id="home">Home</button>
</a>

<h2>Update Exercise</h2>

<form id="update-exercise" method="PUT">
    <div class="form-group">
        <label for="exercise-goal">Goal</label>
        <input class="form-control" id="exercise-goal" value="{{this.goal}}" placeholder="Number of reps or minutes" name="goal">
    </div>
    <div class="form-group">
        <label for="exercise-completed">Done</label>
        <input class="form-control" id="exercise-completed" value="{{this.completed}}" placeholder="Number of reps or minutes" name="completed">
    </div>
</form>
    <div class="form-group">
        <button class="btn primary btn" id="updateExerciseButton">Update</button>
    </div>

<script src='/js/updateexercise.js'></script>