<div class="wrapper">
  <a href="/login">
    <button class='btn' id='logout' type="submit">Log Out</button>
  </a>
  {{!-- <a href="/nutrition">
    <button class="btn" id="nutrition">nutrition</button>
  </a> --}}
  {{!-- <a href="/exercise">
    <button class="btn" id="exercise">exercise</button>
  </a> --}}

  <h2>Exercise</h2>

  <a href="/addexercise"><button class="btn primary-btn" id="add-exercise">Add Exercise</button></a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Date</th>
        <th scope="col">Type</th>
        <th scope="col">Goal</th>
        <th scope="col">Done</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">0</th>
        <td scope="row">1/16/23</td>
        <td>Run</td>
        <td>30 min</td>
        <td>Y</td>
        <td>
          <a href="/updateexercise"><button class="btn secondary-btn" id="update-exercise">Update</button></a>
          <a href="/deleteexercise"><button class="btn danger-btn" id="delete-exercise">Delete</button></a>
        </td>
      </tr>
      {{#each planneritems as |planneritem|}}
      <tr>
        <th scope="row">{{planneritem.id}}</th>
        <td>{{planneritem.date}}</td>
        <td>{{planneritem.type}}</td>
        <td>{{planneritem.goal}}</td>
        <td>{{planneritem.completed}}</td>
        <td>
          <a href="/updateexercise"><button class="btn secondary-btn" id="update-exercise">Update</button></a>
          <a href="/deleteexercise"><button class="btn danger-btn" id="delete-exercise">Delete</button></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <h2>Nutrition</h2>

  <a href="/addfood"><button class="btn primary-btn" id="add-food">Add Food</button></a>
  <table class="table">
    <thead>
      <tr>
        {{!-- <th scope="col">ID#</th> --}}
        <th scope="col">Time</th>
        <th scope="col">Food</th>
        <th scope="col">Calories</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        {{!-- <th scope="row">1</th> --}}
        <td>10am</td>
        <td>Scrambled Eggs</td>
        <td>70</td>
        <td>
          <a href="/updatefood"><button class="btn secondary-btn" id="update-food">Update</button></a>
          <a href="/deletefood"><button class="btn danger-btn" id="delete-food">Delete</button></a>
        </td>
      </tr>
      {{#each nutritions as |nutrition|}}
      <tr>
        {{!-- <th scope="row">{{nutrition.id}}</th> --}}
        <td>{{nutrition.time}}</td>
        <td>{{nutrition.name}}</td>
        <td>{{nutrition.calories}}</td>
        <td>
          <a href="/updatefood"><button class="btn secondary-btn" id="update-food">Update</button></a>
          <a href="/deletefood"><button class="btn danger-btn" id="delete-food">Delete</button></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script src="/js/logout.js" type="text/javascript"></script>