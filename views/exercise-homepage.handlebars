<nav class="nav">
  <a class="nav-link" href="/homepage">Home</a>
  <a class="nav-link" href="/nutrition-homepage">Nutrition</a>
  <a class="nav-link" href='/login' id='logout' type='submit'>Log Out</a>
</nav>

<div class="container-lg p-3">

  <h1>Exercise</h1>

  <div class="p-3">
    <h2>Progress</h2>
    <div class='progress' role='progressbar' aria-label='Basic example' aria-valuenow='0' aria-valuemin='0'
      aria-valuemax='100'>
      <div class='progress-bar' style='width: 0%'></div>
    </div>
  </div>

  <div class="p-3">
    <h3>Current Date:</h3>
    <p id='currentDate'></p>
  </div>


  <div class="alert alert-secondary" id="exerciseAlert" role="alert">Click add exercise to get started.</div>

  <div class="p-3">
    <a href='/addexercise'><button class='btn primary-btn' id='add-exercise'>Add
        Exercise</button></a>
  </div>

  {{#each planneritems as |planneritem|}}
  <div class="card p-3" style="width: 18rem;">
    <div class="card-body">
      <h4 class="dateData card-title">{{planneritem.date}}</h4>
      <h5 class="typeData card-subtitle mb-2">{{planneritem.type}}</h5>
      <p class="card-text goalData">Goal: {{planneritem.goal}} reps/minutes</p>
      <p class="card-text completedData">Completed: {{planneritem.completed}} reps/minutes</p>
      <p class="d-none idData">{{planneritem.id}}</p>
      <a href="href='/api/planner/updateexercise/{{planneritem.id}}" class="card-link">Update</a>
      <a data-id="{{planneritem.id}}" class="card-link">Delete</a>
    </div>
  </div>
  {{/each}}

<script src='/js/logout.js' type='text/javascript'></script>
<script src='/js/deleteexercise.js' type='text/javascript'></script>
<script src='/js/totalWorkout.js' type='text/javascript'></script>