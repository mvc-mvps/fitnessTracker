<h1>Exercise</h1>

<div>
  <h2>Current Date:</h2>
  <p id='currentDate'></p>
</div>
<div id='exerciseAlert'></div>
<h5>Progress</h5>
<div class='progress' role='progressbar' aria-label='Basic example' aria-valuenow='0' aria-valuemin='0'
  aria-valuemax='100'>
  <div class='progress-bar' style='width: 0%'></div>
</div>

<a href='/addexercise'><button class='btn primary-btn' id='add-exercise'>Add
    Exercise</button></a>
<table class='table'>
  <thead>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Date</th>
      <th scope='col'>Type</th>
      <th scope='col'>Goal</th>
      <th scope='col'>Done</th>
      <th scope='col'>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each planneritems as |planneritem|}}
    <tr>
      <th scope='row' class='idData'>{{planneritem.id}}</th>
      <td class='dateData'>{{planneritem.date}}</td>
      <td>{{planneritem.type}}</td>
      <td class='goalData'>{{planneritem.goal}}</td>
      <td class='completedData'>{{planneritem.completed}}</td>
      <td>
        <a href='/api/planner/updateexercise/{{planneritem.id}}'><button class='btn secondary-btn'>Update</button></a>
        <button class='btn danger-btn delete-exercise' data-id='{{planneritem.id}}'>Delete</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

<script src='/js/logout.js' type='text/javascript'></script>
<script src='/js/deleteexercise.js' type='text/javascript'></script>
<script src='/js/totalWorkout.js' type='text/javascript'></script>